

(url  "git://github.com/mytoh/kehote")
(install
  (
   (make-directory* (build-path *lehti-dist-directory* "kehote" ))
   (copy-directory* (build-path *lehti-cache-directory* "kehote/bin")
                    (build-path *lehti-dist-directory* "kehote/bin"))
   (copy-directory* (build-path *lehti-cache-directory* "kehote/lib")
                    (build-path *lehti-dist-directory* "kehote/lib"))
   (run-process `(chmod +x ,(build-path *lehti-dist-directory* "kehote/bin/kehote")) :wait #t)
   ))
